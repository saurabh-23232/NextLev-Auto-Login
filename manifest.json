{
  "manifest_version": 3,
  "name": "NextLev Auto Login",
  "description": "Securely store your credentials and let us handle the rest, saving you time and effort!",
  "version": "3.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/Icon.png",
      "48": "assets/Icon.png",
      "128": "assets/lock-golden.png"
    }
  },
  "icons": {
    "16": "assets/Icon.png",
    "48": "assets/Icon.png",
    "128": "assets/lock-golden.png"
  }
}
